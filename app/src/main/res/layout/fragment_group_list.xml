<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gpLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

        <include layout="@layout/toolbar" android:id="@+id/toolbar_top"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_groups"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <LinearLayout
            android:id="@+id/dialog_pop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_top"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:elevation="10dp"
            >
                <TextView
                    android:id="@+id/install_light"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/normal_light_title"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/install_rgb_light"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/rgb_title"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/install_switch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/switch_title"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/install_sensor"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/sensor_title"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
        </LinearLayout>
</android.support.constraint.ConstraintLayout>