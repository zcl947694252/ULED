<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/scene_delete"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scene_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/scene1"
        android:textColor="@color/black_three"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/scene_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37" />

    <TextView
        android:id="@+id/scene_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="共10组"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp"
        android:textColor="@color/black_nine"
        app:layout_constraintStart_toStartOf="@+id/scene_name" />

    <Button
        android:id="@+id/scene_edit"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/setting"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/btn_rec_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
