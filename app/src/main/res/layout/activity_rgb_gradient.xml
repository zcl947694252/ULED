<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    >

    <include
        android:id="@+id/topView"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/btn_mode_top"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/topView"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:id="@+id/buildInButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="内置模式"
            android:gravity="center"
            android:background="@color/mode_check_color"
            android:layout_marginEnd="1dp"
            />
        <TextView
            android:id="@+id/diyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="自定义"
            android:gravity="center"
            android:layout_marginStart="1dp"
            android:background="@color/white"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/builtInModeRecycleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btn_mode_top"
        app:layout_constraintEnd_toEndOf="@id/btn_mode_top"
        app:layout_constraintTop_toBottomOf="@id/btn_mode_top"
        android:layout_marginTop="10dp"
        >
    </android.support.v7.widget.RecyclerView>

    <SeekBar
        android:id="@+id/sbSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/builtInModeRecycleView"
        app:layout_constraintStart_toStartOf="@id/builtInModeRecycleView"
        app:layout_constraintEnd_toEndOf="@id/builtInModeRecycleView"
        android:layout_marginTop="20dp"
        android:max="100"
        android:padding="5dp"
        android:progress="10" />

    <TextView
        android:id="@+id/tvSpeed"
        android:text="@string/speed_text"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/builtInModeRecycleView"
        app:layout_constraintTop_toBottomOf="@id/sbSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:id="@+id/normal_rgb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/primary"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:text="RGB"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/dynamic_rgb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="1dp"
            android:background="@color/primary"
            android:layout_height="match_parent"
            android:text="动态RGB"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>