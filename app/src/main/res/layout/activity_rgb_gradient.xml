<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    >

    <include
        android:id="@+id/topView"
        layout="@layout/toolbar"/>

            <LinearLayout
                android:id="@+id/btn_mode_top"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/topView"
                >
                <TextView
                    android:id="@+id/buildInButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="内置模式"
                    android:gravity="center"
                    android:background="@color/mode_check_color"
                    android:layout_marginEnd="1dp"
                    />
                <TextView
                    android:id="@+id/diyButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="自定义"
                    android:gravity="center"
                    android:layout_marginStart="1dp"
                    android:background="@color/white"
                    />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/builtInModeRecycleView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:maxHeight="400dp"
                app:layout_constraintStart_toStartOf="@id/btn_mode_top"
                app:layout_constraintEnd_toEndOf="@id/btn_mode_top"
                app:layout_constraintTop_toBottomOf="@id/btn_mode_top"
                app:layout_constraintBottom_toTopOf="@id/sbSpeed"
                >
            </android.support.v7.widget.RecyclerView>

            <SeekBar
                android:id="@+id/sbSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/tvSpeed"
                app:layout_constraintStart_toStartOf="@id/builtInModeRecycleView"
                app:layout_constraintEnd_toEndOf="@id/builtInModeRecycleView"
                android:layout_marginTop="8dp"
                android:max="100"
                android:padding="5dp"
                android:progress="10" />

            <TextView
                android:id="@+id/tvSpeed"
                android:text="@string/speed_text"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/builtInModeRecycleView"
                app:layout_constraintBottom_toTopOf="@id/bottom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/normal_rgb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="RGB"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dynamic_rgb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dynamic_rgb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="动态RGB"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/normal_rgb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>