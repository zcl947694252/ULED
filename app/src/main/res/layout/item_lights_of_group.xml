<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/img_light"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/icon_light_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tv_setting"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="6dp"
        android:src="@drawable/menubarsetting3x"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/img_light"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/light_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_light"
        />

    <TextView
        android:id="@+id/tv_rgb_color"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/icon_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/light_name" />


</android.support.constraint.ConstraintLayout>
