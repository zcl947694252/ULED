<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_setting_ly"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground">

    <ImageView
            android:id="@+id/item_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:src="@drawable/icon_local_data" />

    <TextView
            android:id="@+id/item_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"
            android:text="@string/upload_data"
            android:textColor="@color/black_e"
            android:textSize="13sp" />

    <ImageView
            android:id="@+id/item_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:padding="8dp"
            android:src="@drawable/icon_arrow" />

    <TextView
            android:id="@+id/item_setting_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/item_setting_back"
            android:layout_toEndOf="@+id/item_setting_text"
            android:gravity="center_vertical|end"
            android:text="@string/mode_str"
            android:textColor="@color/black_three"
            android:textSize="13sp"
            android:visibility="gone" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_color" />
</RelativeLayout>