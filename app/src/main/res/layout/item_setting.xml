<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/oneClickBackup"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/item_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_local_data"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            />

        <TextView
            android:id="@+id/item_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_data"
            android:textColor="@color/black_e"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="38dp"
            />

        <ImageView
            android:id="@+id/item_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="23dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color"
            />
    </RelativeLayout>