<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rvDevice"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:showIn="@layout/fragment_new_device">

    <TextView
            android:id="@+id/main_go_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/see_help"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/sp_15" />

    <TextView
            android:id="@+id/main_add_device"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="23dp"
            android:gravity="center"
            android:background="@drawable/add_device_f5"
            android:text="@string/add_device_new"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/blue_background"
            android:textSize="16sp" />
</LinearLayout>