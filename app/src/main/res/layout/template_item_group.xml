<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:id="@+id/template_device_group_ly"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:id="@+id/template_device_card"
            android:layout_width="168dp"
            android:layout_height="80dp"
            app:cardCornerRadius="@dimen/dp_8">

        <ImageView
                android:id="@+id/template_device_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icon_device_open" />

        <TextView
                android:id="@+id/template_group_name_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/device_name"
                android:textColor="@color/gray_3"
                android:textSize="18sp" />

            <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/template_device_more"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/brightness_icon"/>

                <ImageView
                        android:id="@+id/template_device_setting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/icon_setting" />
            </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@+id/template_device_card" />


</RelativeLayout>