<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_device_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_connector_device_detail">

    <ImageView
        android:id="@+id/image_no_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp" />

    <Button
        android:id="@+id/add_groups_btn"
        style="@style/ButtonStyle"
        android:text="@string/add_groups"
        android:layout_below="@id/image_no_group" />
</RelativeLayout>
