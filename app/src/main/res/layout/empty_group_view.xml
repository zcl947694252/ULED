<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_device_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:showIn="@layout/template_device_detail_list">

    <Button
        android:id="@+id/add_groups_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@id/image_no_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/device_list"
        android:text="@string/add_groups"
        android:textColor="@color/blue_background"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_no_group"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_device" />
</RelativeLayout>
