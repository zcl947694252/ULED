<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/timer_scene_ly"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
    <!--時間定時title的顔色是黑3 時間段時黑9-->
    <View
            android:id="@+id/item_gw_timer_line_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_e" />

    <View
            android:id="@+id/item_gw_timer_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/gray_e" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/item_gw_timer_line"
            android:layout_below="@+id/item_gw_timer_line_top"
            android:gravity="center_vertical"
            android:orientation="vertical">


        <TextView
                android:id="@+id/item_gw_timer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="15dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/scene_name"
                android:textColor="@color/black_three"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/item_gw_timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="13dp"
                android:text="@string/scene_name"
                android:textColor="@color/black_three"
                android:textSize="13sp" />

    </LinearLayout>

    <ImageView
            android:id="@+id/item_gw_timer_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_gw_timer_line"
            android:layout_below="@+id/item_gw_timer_line_top"
            android:layout_alignParentEnd="true"
            android:paddingEnd="15dp"
            android:src="@drawable/arrow_r" />

    <TextView
            android:id="@+id/item_gw_timer_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_gw_timer_line"
            android:layout_below="@+id/item_gw_timer_line_top"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@id/item_gw_timer_arr"
            android:gravity="center"
            android:text="@string/select_scene"
            android:textColor="@color/black_six"
            android:textSize="15sp" />
</RelativeLayout>