<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/left_view"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/rgb_icon_circle"
                android:background="@drawable/icon_circle"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/left_view"
            android:layout_centerVertical="true"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:singleLine="true"
            android:text="所有灯"
            android:layout_toStartOf="@+id/right_bt"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/right_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_on"
                style="@null"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/btn_radius_selector"
                android:text="@string/group_list_on"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/btn_off"
                style="@null"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/btn_radius_selector"
                android:text="@string/group_list_off"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/btn_set"
                style="@null"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/btn_radius_selector"
                android:text="@string/set_str"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>