<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="25dp">

    <ImageView
            android:id="@+id/template_device_icon_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/icon_device_open"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
            android:id="@+id/template_select_n"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:checked="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintEnd_toEndOf="@+id/template_device_icon_n"
            app:layout_constraintStart_toEndOf="@+id/template_device_icon_n"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/template_device_name_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_three"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@+id/template_device_icon_n"
            app:layout_constraintStart_toStartOf="@+id/template_device_icon_n"
            app:layout_constraintTop_toBottomOf="@+id/template_device_icon_n" />

    <TextView
            android:id="@+id/template_group_name_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/black_three"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/template_device_icon_n"
            app:layout_constraintStart_toStartOf="@+id/template_device_icon_n"
            app:layout_constraintTop_toBottomOf="@+id/template_device_name_n" />

