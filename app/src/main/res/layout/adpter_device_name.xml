<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="88dp"
    android:layout_height="44dp">

    <TextView
        android:id="@+id/cw_light_text"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="group 1"
        android:textColor="@color/black_nine"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cw_light_image"
        android:layout_width="22dp"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/btn_rec_blue_bt"
        app:layout_constraintEnd_toEndOf="@+id/cw_light_text"
        app:layout_constraintStart_toStartOf="@+id/cw_light_text"
        app:layout_constraintTop_toBottomOf="@+id/cw_light_text" />

</android.support.constraint.ConstraintLayout>