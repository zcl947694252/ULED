<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/device_detail_item_img_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/icon_device_open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/device_detail_item_name_ly"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_detail_item_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="1234"
            android:textColor="@color/black_three"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/device_detail_item_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="1234"
            android:gravity="top"
            android:textColor="@color/black_three"
            android:textSize="12sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/device_detail_item_arr"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_arrow"/>


</LinearLayout>