<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/configGroupRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_gay">

    <include layout="@layout/toolbar" />

    <LinearLayout
            android:layout_width="319dp"
            android:layout_height="268dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="161dp"
            android:layout_marginEnd="38dp"
            android:background="@drawable/icon_scenes"
            android:gravity="center">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="75dp"
                android:paddingStart="13dp"
                android:paddingTop="7dp"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="6dp"
                >

            <TextView
                    android:id="@+id/scene_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/click_config" />

            <TextView
                    android:id="@+id/scene_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/click_config"/>


            <TextView
                    android:id="@+id/scene_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_4"
                    android:layout_alignParentBottom="true"
                    android:text="@string/click_config" />


            <TextView
                    android:id="@+id/scene_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/click_config"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_big"
                    android:gravity="center"
                    android:layout_centerInParent="true">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_switch_scene" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/scene_switch_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dp"
            android:gravity="center"
            android:text="@string/scene_switch"
            android:textColor="@color/gray_3"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/scene_versionLayout"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/scene_use_botton"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btn_rec_blue_bt"
            android:clickable="false"
            android:text="@string/use"
            android:textColor="@android:color/white"
            android:visibility="visible"
            />

    <LinearLayout
            android:id="@+id/scene_versionLayout"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

        <TextView
                android:id="@+id/scene_tvLightVersionText"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/switch_version"
                android:textColor="@color/white"
                android:textSize="12sp" />

        <TextView
                android:id="@+id/scene_tvLightVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:textSize="12sp" />
    </LinearLayout>


</>

