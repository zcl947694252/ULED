<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/config_scene_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_gay"
        android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

<!--android:background="@drawable/icon_scenes"-->
            <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="370dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="38dp"
                    android:background="@drawable/icon_empty_scene"
                    android:gravity="center">

                <RelativeLayout
                        android:layout_width="380dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="85dp"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:paddingStart="13dp"
                        android:paddingTop="7dp"
                        android:paddingEnd="@dimen/dp_8">

                    <TextView
                            android:id="@+id/scene_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_small"
                            android:gravity="center"
                            android:layout_marginStart="2dp"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="@string/click_config" />

                    <TextView
                            android:id="@+id/scene_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/icon_small"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:text="@string/click_config" />


                    <TextView
                            android:id="@+id/scene_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/icon_small"
                            android:gravity="center"
                            android:layout_marginStart="2dp"
                            android:paddingBottom="@dimen/dp_4"
                            android:text="@string/click_config" />


                    <TextView
                            android:id="@+id/scene_four"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/icon_small"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:text="@string/click_config" />

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/icon_big"
                            android:gravity="center"
                            android:visibility="gone">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_switch_scene" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/scene_switch_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/scene_switch"
                    android:textColor="@color/gray_3"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@+id/scene_versionLayout"
                    app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <Button
                android:id="@+id/scene_use_botton"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="38dp"
                android:layout_marginEnd="38dp"
                android:background="@drawable/btn_rec_blue_bt"
                android:clickable="false"
                android:text="@string/use"
                android:textColor="@android:color/white"
                android:visibility="visible" />

        <LinearLayout
                android:id="@+id/scene_versionLayout"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/primary"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

            <TextView
                    android:id="@+id/scene_tvLightVersionText"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="@string/switch_version"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/scene_tvLightVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/pb_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#7e7e7e7e">
        <TextView
                android:id="@+id/pb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:text="@string/setting_switch"
                android:textColor="@color/gray_3"
                android:textSize="16sp" />
        <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_above="@+id/pb_tv"
                android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>

