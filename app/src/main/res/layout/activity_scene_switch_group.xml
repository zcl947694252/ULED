<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/configGroupRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_gay">

    <include layout="@layout/toolbar" />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="161dp"
            android:layout_marginEnd="38dp"
            android:background="@drawable/icon_scenes"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="9dp"
                android:paddingStart="13dp"
                android:paddingTop="7dp"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="13dp">

            <TextView
                    android:id="@+id/scene_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/click_config"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/scene_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/click_config"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            <TextView
                    android:id="@+id/scene_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/click_config"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/scene_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="@string/click_config"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="88dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/icon_big"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_switch_scene" />
            </RelativeLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <TextView
            android:id="@+id/scene_switch_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dp"
            android:gravity="center"
            android:text="@string/scene_switch"
            android:textColor="@color/gray_3"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/scene_versionLayout"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/scene_use_botton"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/btn_rec_blue_bt"
            android:clickable="false"
            android:text="@string/use"
            android:textColor="@android:color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
            android:id="@+id/scene_versionLayout"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="384dp">

        <TextView
                android:id="@+id/scene_tvLightVersionText"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/switch_version"
                android:textColor="@color/white"
                android:textSize="12sp" />

        <TextView
                android:id="@+id/scene_tvLightVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:textSize="12sp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>

