<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/config_scene_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <include layout="@layout/toolbar" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbar"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                <!--android:background="@drawable/icon_scenes"-->
                <LinearLayout
                        android:id="@+id/scene_switch_cw"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:background="@drawable/icon_empty_scene"
                        android:gravity="center"
                        android:visibility="gone">

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="70dp"
                            android:layout_marginEnd="@dimen/dp_15"
                            android:paddingStart="13dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="@dimen/dp_8"
                            android:paddingBottom="7dp">

                        <TextView
                                android:id="@+id/scene_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:maxWidth="110dp"
                                android:minWidth="100dp"
                                android:paddingBottom="@dimen/dp_4"
                                android:singleLine="true"
                                android:text="@string/click_config" />

                        <TextView
                                android:id="@+id/scene_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:gravity="center"
                                android:maxWidth="110dp"
                                android:minWidth="100dp"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_4"
                                android:singleLine="true"
                                android:text="@string/click_config" />


                        <TextView
                                android:id="@+id/scene_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="2dp"
                                android:gravity="center"
                                android:maxWidth="110dp"
                                android:minWidth="100dp"
                                android:paddingBottom="@dimen/dp_4"
                                android:singleLine="true"
                                android:text="@string/click_config" />

                        <TextView
                                android:id="@+id/scene_four"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginEnd="@dimen/dp_5"
                                android:gravity="center"
                                android:maxWidth="110dp"
                                android:minWidth="100dp"
                                android:singleLine="true"
                                android:text="@string/click_config" />

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/icon_big"
                                android:gravity="center"
                                android:visibility="visible">

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_switch_scene" />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                        android:id="@+id/scene_switch_touch"
                        android:layout_width="310dp"
                        android:layout_height="287dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:background="@drawable/sw_touch_scene"
                        android:paddingStart="13dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="@dimen/dp_8"
                        android:paddingBottom="7dp">

                    <TextView
                            android:id="@+id/scene_one_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:maxWidth="110dp"
                            android:minWidth="100dp"
                            android:padding="25dp"
                            android:singleLine="true"
                            android:text="@string/click_config" />

                    <TextView
                            android:id="@+id/scene_two_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:background="@color/white"
                            android:gravity="center"
                            android:maxWidth="110dp"
                            android:minWidth="100dp"
                            android:padding="25dp"
                            android:singleLine="true"
                            android:text="@string/click_config" />


                    <TextView
                            android:id="@+id/scene_three_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="18dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:maxWidth="110dp"
                            android:minWidth="100dp"
                            android:padding="25dp"
                            android:singleLine="true"
                            android:text="@string/click_config" />

                    <TextView
                            android:id="@+id/scene_four_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:background="@color/white"
                            android:gravity="center"
                            android:maxWidth="110dp"
                            android:minWidth="100dp"
                            android:padding="25dp"
                            android:singleLine="true"
                            android:text="@string/click_config" />

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/icon_big"
                            android:gravity="center"
                            android:visibility="gone">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_switch_scene" />
                    </RelativeLayout>

                </RelativeLayout>


                <TextView
                        android:id="@+id/scene_switch_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="@string/scene_switch"
                        android:textColor="@color/gray_3"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="@+id/scene_versionLayout"
                        app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <Button
                    android:id="@+id/scene_use_botton"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="38dp"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:background="@drawable/rect_blue_5"
                    android:clickable="false"
                    android:text="@string/confirm"
                    android:textColor="@android:color/white"
                    android:visibility="visible" />

            <LinearLayout
                    android:id="@+id/scene_versionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:background="@color/primary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                <TextView
                        android:id="@+id/scene_tvLightVersionText"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/switch_version"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                <TextView
                        android:id="@+id/scene_tvLightVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/pb_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7e7e7e7e"
            android:visibility="gone">

        <TextView
                android:id="@+id/pb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:text="@string/setting_switch"
                android:textColor="@color/gray_3"
                android:textSize="16sp" />

        <ProgressBar
                android:id="@+id/pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/pb_tv"
                android:layout_centerInParent="true"
                android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>