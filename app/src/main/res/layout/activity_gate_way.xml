<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

        <EditText
                android:id="@+id/gate_way_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/lable1"
                android:textColor="@color/black_three"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/gate_way_edite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/edit"
                android:textColor="@color/blue_text"
                android:textSize="18sp" />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_e" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/repetition"
                android:textColor="@color/black_three"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/gate_way_repete_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="@string/edit"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/black_three"
                android:textSize="15sp" />

        <ImageView
                android:id="@+id/gate_way_repete_mode_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_10"
                android:src="@drawable/arrow_r" />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/gray_e" />

    <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/swipe_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>