<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
            android:id="@+id/template_device_card"
            android:layout_width="175dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/device_fragment_background"
            android:elevation="2dp"
            android:padding="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/template_device_icon"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:src="@drawable/icon_group_n"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.64" />

        <TextView
                android:id="@+id/template_group_name_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:text="蓝牙接收器"
                android:textColor="@color/black_three"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/template_device_icon"
                app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/template_device_icon"
                app:layout_constraintTop_toBottomOf="@id/template_group_name_s"
                app:layout_constraintVertical_bias="1.0">


            <LinearLayout
                    android:id="@+id/template_device_more_ly"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/template_device_more"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/brightness_icon" />

                <ImageView
                        android:id="@+id/template_device_setting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/icon_setting" />
            </LinearLayout>

            <TextView
                    android:id="@+id/template_device_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="end|bottom"
                    android:gravity="end|center_vertical"
                    android:text="设置数量0"
                    android:textColor="@color/blue_background"
                    android:textSize="15sp"
                    android:visibility="gone" />
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@+id/template_device_card" />

</android.support.constraint.ConstraintLayout>