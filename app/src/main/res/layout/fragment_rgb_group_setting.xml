<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Brightness -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#621A1B"
                android:gravity="center"
                android:text="R"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/color_r"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@color/red"
                android:text="100"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#254216"
                android:gravity="center"
                android:text="G"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/color_g"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="#95F668"
                android:text="100"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#001054"
                android:gravity="center"
                android:text="B"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/color_b"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@color/blue"
                android:text="100"
                android:textColor="@color/white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="10dp">

            <com.skydoves.colorpickerview.ColorPickerView
                android:id="@+id/color_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:palette="@drawable/palette"
                app:selector="@drawable/wheel"
                />

            <Button
                android:id="@+id/btn_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Test"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="@string/long_click_select_color_tip"
                android:gravity="center"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/diy_color_recycler_list_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_brightness_rgb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/device_setting_brightness" />

            <SeekBar
                android:id="@+id/sb_brightness"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:padding="5dp"
                android:progress="10" />
        </LinearLayout>

        <!-- Color -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/device_setting_color" />

                <View
                    android:id="@+id/color_preview"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:background="#000000" />
            </RelativeLayout>
        </LinearLayout>


        <!-- Temperature -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_temperature_rgb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/device_setting_temperature" />

            <SeekBar
                android:id="@+id/sb_temperature"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:padding="5dp"
                android:progress="10" />
        </LinearLayout>

        <!-- Music -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="@string/device_setting_music" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:text="@string/device_setting_sound" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/border_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_remove_group"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/click_btn"
                android:textColor="@android:color/white"
                android:text="@string/delete_group"/>

            <Button
                android:id="@+id/btn_rename"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:background="@drawable/click_btn"
                android:textColor="@android:color/white"
                android:text="@string/rename_the_group"/>
        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/btn_remove_group"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="46dp"-->
            <!--android:layout_margin="10dp"-->
            <!--android:background="@drawable/click_btn"-->
            <!--android:text="@string/delete_group"-->
            <!--android:visibility="visible"-->
            <!--android:textColor="@android:color/white" />-->

        <!--<Button-->
            <!--android:id="@+id/btn_rename"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="46dp"-->
            <!--android:layout_margin="10dp"-->
            <!--android:background="@drawable/click_btn"-->
            <!--android:text="@string/rename_the_group"-->
            <!--android:visibility="visible"-->
            <!--android:textColor="@android:color/white" />-->
    </LinearLayout>
</ScrollView>