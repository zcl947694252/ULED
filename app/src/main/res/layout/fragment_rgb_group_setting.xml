<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#621A1B"
                    android:gravity="center"
                    android:text="R"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/color_r"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@color/red"
                    android:text="100"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/ll_r"
                app:layout_constraintTop_toBottomOf="@id/ll_r">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#254216"
                    android:gravity="center"
                    android:text="G"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/color_g"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="#95F668"
                    android:text="100"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/ll_r"
                app:layout_constraintTop_toBottomOf="@id/ll_g">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#001054"
                    android:gravity="center"
                    android:text="B"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/color_b"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@color/blue"
                    android:text="100"
                    android:textColor="@color/white" />
            </LinearLayout>

            <com.skydoves.colorpickerview.ColorPickerView
                android:id="@+id/color_picker"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:palette="@drawable/palette"
                app:selector="@drawable/wheel" />


            <LinearLayout
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/color_picker">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/long_click_select_color_tip"
                    android:textColor="@color/gray"
                    android:textSize="12dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/diy_color_recycler_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/brightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tip">

                <TextView
                    android:id="@+id/tv_brightness_rgb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text="@string/device_setting_brightness" />

                <SeekBar
                    android:id="@+id/sbBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:padding="6dp"
                    android:progress="100" />

                <TextView
                    android:id="@+id/tv_brightness_w"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text="@string/w_bright" />

                <SeekBar
                    android:id="@+id/sb_w_bright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:padding="6dp" />

            </LinearLayout>

            <!-- Color -->

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:layout_marginBottom="2dp"-->
            <!--android:background="@color/border_line" />-->

            <!-- Temperature -->

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:background="@color/border_line" />-->

            <LinearLayout
                android:id="@+id/group_view_func_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/brightness">

                <Button
                    android:id="@+id/btn_remove_group"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn"
                    android:text="@string/delete_group"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_rename"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn"
                    android:text="@string/rename_the_group"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/light_view_bt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/brightness">

                <Button
                    android:id="@+id/update_group"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn"
                    android:text="@string/update_group"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_remove"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn"
                    android:text="@string/factory_reset"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/lightVersion"
                android:text="1.0.0"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/light_view_bt_layout"
                app:layout_constraintStart_toStartOf="@id/tip"
                android:paddingStart="8dp"
                android:visibility="gone"
                />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/normal_rgb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="RGB"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dynamic_rgb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dynamic_rgb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rgb_gradient"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/normal_rgb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>