<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_bottom_no"
    android:orientation="horizontal"
    tools:showIn="@layout/popwindown_add_region">

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_left"
        android:text="@string/cancel"

        android:textColor="@color/black_six" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/black_six" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_right"
        android:text="@string/btn_ok"
        android:textColor="@color/blue_background" />
</LinearLayout>