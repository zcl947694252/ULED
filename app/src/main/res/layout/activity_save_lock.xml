<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="19dp"
            android:gravity="center_vertical"
            android:text="@string/save_lock1"
            android:textColor="@color/gray_3"
            android:textSize="13sp" />

    <TextView
            android:id="@+id/safe_open"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/rect_gray_60"
            android:gravity="center"
            android:text="@string/open"
            android:textColor="@color/white"
            android:textSize="28sp" />

    <ImageView
            android:layout_width="8dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_arrow_safe" />
    <TextView
            android:id="@+id/safe_lock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rect_gray_60"
            android:gravity="center"
            android:text="@string/lock"
            android:textColor="@color/white"
            android:textSize="28sp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:text="@string/save_lock2"
            android:textColor="@color/gray_3"
            android:textSize="13sp" />

    <TextView
            android:id="@+id/safe_close"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/rect_gray_60"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="28sp" />

    <ImageView
            android:layout_width="8dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_arrow_safe" />
    <TextView
            android:id="@+id/safe_unlock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rect_gray_60"
            android:gravity="center"
            android:text="@string/unlock"
            android:textColor="@color/white"
            android:textSize="28sp" />
</LinearLayout>